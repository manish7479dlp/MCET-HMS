<div class="container">
  <header>Student Registration</header>

  <form action="/student" method="post">
    <div class="form first">
      <div class="details personal">
        <span class="title">Personal Details</span>

        <div class="fields">
          <div class="input-field">
            <label>Full Name</label>
            <input type="text" placeholder="Enter your name" required name="name" />
          </div>

          <div class="input-field">
            <label>Aadhar Number</label>
            <input type="number" placeholder="Enter Aadhar number" required name="aadhar"/>
          </div>

          <div class="input-field">
            <label>Gender</label>
            <select id="registerGenderField" name="gender" required disabled name="roomType">
              <option disabled selected>Select Gender</option>
              <option>Male</option>
              <option>Female</option>
            </select>
          </div>

          <div class="input-field">
            <label>Blood Group</label>
            <input list="bloodGroupList" id="bloodGroup" type="text" placeholder="Enter your Blood Group" required name="bloodGroup"/>
          </div>

          <datalist id="bloodGroupList">
                <option value="A+">
                <option value="B+">
                <option value="AB+">
                <option value="O+">

                <option value="A-">
                <option value="B-">
                <option value="AB-">
                <option value="O-">
          </datalist>

          <div class="input-field">
            <label>Mobile Number</label>
            <input type="number" placeholder="Enter mobile number" required name="mob"/>
          </div>

         

          <div class="input-field">
            <label>Department</label>
            <select required name="department">
              <option disabled selected>Select Department</option>
              <option>CSE</option>
              <option>ECE</option>
              <option>EE</option>
              <option>CE</option>
            </select>
          </div>

          
        </div>
      </div>

      <div class="details ID">
        {{!-- <span class="title">Identity Details</span> --}}

        <div class="fields">

           <div class="input-field">
            <label>Year</label>
            <select required name="year">
              <option disabled selected>Select Year</option>
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
            </select>
          </div>

          
          <div class="input-field">
            <label>Room Type</label>
            <select required name="roomType">
              <option disabled selected>Select Room Type</option>
              <option>2-seaters</option>
              <option>3-seaters</option>
            </select>
          </div>

          <div class="input-field">
            <label>Building Number</label>
            <input list="buildingNumber" type="text" placeholder="Enter Building number" required name="buildingNumber"/>
          </div>

          <datalist id="buildingNumber">
            <option value="14">
                  <option value="14A">

                  <option value="15">
                  <option value="15A">

                  <option value="16">
                  <option value="16A">

                  <option value="17">
