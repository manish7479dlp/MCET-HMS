                  <option value="20">
                  <option value="20A">

                  <option value="61">
                  <option value="61A">

                  <option value="62">
                  <option value="62A">

                  <option value="63">
                  <option value="63A">

                  <option value="64">
                  <option value="64A">

                  <option value="65">
                  <option value="65A">

                  <option value="66">
                  <option value="66A">

                  <option value="67">
                  <option value="67A">

                  <option value="68">
                  <option value="68A">

                  <option value="69">
                  <option value="69A">

          </datalist>

          <div class="input-field">
            <label>Fathers's Name</label>
            <input type="text" placeholder="Enter Your Father's Name" required name="fathersName"/>
          </div>

          <div class="input-field">
            <label>Father's Mob Number</label>
            <input type="number" placeholder="Enter Your Father's Number" required name="fathersMob"/>
          </div>

          <div class="input-field">
            <label>Address</label>
            <input type="text" placeholder="Enter your Address" required name="address"/>
          </div>

          
        </div>

        <button class="nextBtn" type="submit">
          <span class="btnText">Submit</span>
          <i class="uil uil-navigator"></i>
        </button>
      </div>
    </div>

